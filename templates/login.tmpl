{{define "base"}}
<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{{.Title}} - {{.BasePageContext.Hostname}} - Monitor</title>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/bootstrap-theme.css">
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
		<link rel="stylesheet" href="/static/css/main.css" type="text/css" media="all" />
		<style type="text/css" media="all">
			body {
				padding-top: 50px;
				background-color: white;
			}
			.form-signin {
				max-width: 330px;
				padding: 10px;
				margin-left: auto;
				margin-right: auto;
				font-size: 16px;
			}
			input {
				margin-bottom: 10px;
			}
		</style>
	</head>
	<body>
		<div class="container-fluid">
			{{if .Message}}
				<div class="alert alert-warning">
					<p>{{.Message}}</p>
				</div>
			{{end}}
			<form class="form-signin" method="POST" role="form">
				<h1 class="form-signin-heading">Login</h1>
				<fieldset>
						<input name="loginForm.Login" id="login" type="text" placeholder="User name" value="{{.Login}}" required autofocus class="form-control"/>
						<input name="loginForm.Password" id="pass" type="password" placeholder="Password" required class="form-control">
						<button type="submit" class="btn btn-lg btn-primary btn-block">Log in</button>
						<input type="hidden" name="BasePageContext.CsrfToken" id="" value="{{.CsrfToken}}" />
					</div>
				</fieldset>
			</form>
		</div>
	</body>

	<script src="/static/lib/jquery/jquery-1.11.0.js"></script>
	<script src="/static/lib/jquery/jquery.validate.js"></script>
	<script src="/static/lib/bootstrap.js" type="text/javascript"></script>
	<script type="text/javascript" charset="utf-8">
		$(function() {
			$("form").validate();
		});
	</script>
</html>
{{end}}
