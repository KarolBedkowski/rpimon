{{define "base"}}
<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{{.Title}} - {{.BaseCtx.Hostname}} - Monitor</title>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/bootstrap-theme.css">
		<link rel="stylesheet" href="/static/css/sb-admin-2.css" type="text/css" />
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
		<link rel="stylesheet" href="/static/css/main.css" type="text/css" media="all" />
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<div class="login-panel panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Login</h3>
						</div>
						<div class="panel-body">
							{{if .Message}}
							<div class="alert alert-warning">
								<p>{{.Message}}</p>
							</div>
							{{end}}
							<form class="form-signin" method="POST" role="form">
								<fieldset>
									<div class="form-group">
										<input name="loginForm.Login" id="login" type="text" placeholder="User name" value="{{.Login}}" required autofocus class="form-control"/>
									</div>
									<div class="form-group">
										<input name="loginForm.Password" id="pass" type="password" placeholder="Password" required class="form-control">
									</div>
									<button type="submit" class="btn btn-lg btn-primary btn-block">Log in</button>
									{{ .CSRFField }}
								</fieldset>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>

	<script src="/static/lib/jquery/jquery.js" type="text/javascript" ></script>
	<script src="/static/lib/jquery/jquery.validate.js"></script>
	<script src="/static/lib/bootstrap.js" type="text/javascript"></script>
	<script src="/static/lib/sb-admin-2.js" type="text/javascript"></script>
	<script type="text/javascript" charset="utf-8">
		$(function() {
			$("form").validate();
		});
	</script>
</html>
{{end}}
