{{define "base"}}
<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Lorem Ipsum</title>
		<link rel="stylesheet" href="/static/css/pure-min.css" type="text/css" media="all" />
		<link rel="stylesheet" href="/static/css/main.css" type="text/css" media="all" />
	</head>
	<body>
		<div  class="pure-g-r" id="layout">
			{{$flash := .GetFlashMessage}}
			{{if $flash}}
			<div class="pure-u-1">
				<div class="info">
					<ul>
					{{range $flash}}
						<li>{{.}}</li>
					{{end}}
					</ul>
				</div>
			</div>
			{{end}}
			<div class="pure-u-1">
				<div class="container">
					<div class="pure-u-1">
						<section>
							<h1>Login</h1>
							{{if .Message}}
								<div class="warnings">
									<p>{{.Message}}</p>
								</div>
							{{end}}
							<form class="pure-form pure-form-aligned" method="POST">
								<fieldset>
									<div class="pure-control-group">
										<label for="login">Login</label>
										<input name="LoginForm.Login" id="login" type="text" placeholder="User name" value="{{.Login}}"/>
									</div>
									<div class="pure-control-group">
										<label for="pass">Password</label>
										<input name="LoginForm.Password" id="pass" type="password" placeholder="Password">
									</div>
									<div class="pure-controls">
										<button type="submit" class="pure-button pure-button-primary">Log in</button>
										<input type="hidden" name="CsrfToken" id="" value="{{.CsrfToken}}" />
									</div>
								</fieldset>
							</form>
						</section>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
{{end}}
