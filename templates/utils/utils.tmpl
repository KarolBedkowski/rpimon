{{define "body"}}
<div class="pure-u-1">
	<section>
		<h1>Utils</h1>
		<div class="pure-menu pure-menu-open">
			<ul>
			{{range $key, $elements := .Configuration.Utils}}
				<li class="pure-menu-heading"><strong>{{$key}}</strong></li>
				{{range $idx, $ele := $elements}}
				<li><a href="/utils/{{$key | urlquery}}/{{$idx | urlquery}}" onclick="return lconfirm()">{{$ele.Name}}</a></li>
				{{end}}
			{{end}}
			</ul>
		</div>
	</section>
</div>

<script type="text/javascript">
		function lconfirm() {
				return confirm('Are you sure?');
		}
</script>


{{end}}
