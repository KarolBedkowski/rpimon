{{define "body"}}

{{if .Warnings}}
<div class="container">
	<div class="alert alert-warning">
		<section>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Warning</h3>
				</div>
				<div class="panel-body">
			<ul>
			{{range .Warnings}}
				<li>{{.}}</li>
			{{end}}
			</ul>
		</section>
	</div>
</div>
{{end}}


<div class="container">
	<div class="row row-centered">
		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Load</h3>
				</div>
				<div class="panel-body">
					<div class="chart-box">
						<span id="load-chart" class="chart-line-load" data-width="280" data-height="50" data-min="0" data-max="{{.MaxAcceptableLoad}}">0</span>
					</div>
					<table class="table-hover table-bordered table-condensed table-centered">
						<thead>
							<tr>
								<th>1m</th>
								<th>5m</th>
								<th>15m</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><span id="load-load1"></span></td>
								<td><span id="load-load5"></span></td>
								<td><span id="load-load15"></span></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">CPU</h3>
				</div>
				<div class="panel-body">
					<div class="chart-box">
						<span id="cpu-chart" class="chart-line" data-width="280" data-height="50" data-min="0" data-max="100">0</span>
					</div>
					<table class="table-hover table-bordered table-condensed table-centered">
						<thead>
							<tr>
								<th>User</th>
								<th>System</th>
								<th>IO</th>
								<th>Freq</th>
								<th>Temp</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><span id="cpuusage-user"></span>%</td>
								<td><span id="cpuusage-system"></span>%</td>
								<td><span id="cpuusage-iowait"></span>%</td>
								<td><span id="cpuinfo-freq"></span></td>
								<td><span id="cpuinfo-temp"></span>Â°C</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Memory</h3>
				</div>
				<div class="panel-body">
					<div class="chart-box">
						<span id="mem-chart" class="chart-line" data-width="280" data-height="50" data-min="0" data-max="100">0</span>
					</div>
					<table class="table-hover table-bordered table-condensed table-centered">
						<thead>
							<tr>
								<th>User</th>
								<th>Buffers</th>
								<th>Cache</th>
								<th>Swap Used</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><span id="meminfo-used"></span>%</td>
								<td><span id="meminfo-buff"></span>%</td>
								<td><span id="meminfo-cach"></span>%</td>
								<td><span id="meminfo-swap"></span>%</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Mount</h3>
				</div>
				<div class="panel-body">
					<table class="table-hover table-bordered table-condensed">
						<thead>
							<tr>
								<th>Filesystem</th>
								<th colspan="2">Used</th>
							</tr>
						</thead>
						<tbody id="fs-table">
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Network interfaces</h3>
				</div>
				<div class="panel-body">
					<table class="table-hover table-bordered table-condensed">
						<thead>
							<tr>
								<th>Interface</th>
								<th>IP</th>
							</tr>
						</thead>
						<tbody id="network-interfaces-table">
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Other</h3>
				</div>
				<div class="panel-body">
					<p><label>Users:</label> <span id="uptime-users"></span></p>
					<p><label>Uptime:</label> <span id="uptime-uptime"></span></p>
				</div>
			</div>
		</div>
	</div>
</div>
{{end}}

{{define "scripts"}}
<script src="/static/lib/jquery/jquery.peity.js" type="text/javascript" ></script>
<script src="/static/js/system.js" type="text/javascript" ></script>
<script type="text/javascript">
	$(function() {
		var colorDiv = 255.0 /  {{.MaxAcceptableLoad}};
		$("span.pie").peity("pie");
		$("span.chart-line").peity("line");
		$("span.chart-line-load").peity("bar", {
			colours: function(val) {
				val = parseFloat(val)
				var red = Math.round(val * colorDiv)
				if (red > 255) {
					red = 255
				} else if (red < 0) {
					red = 0
				}
				var green = Math.round(({{.MaxAcceptableLoad}} - val) *colorDiv);
				if (green < 0) {
					green = 0;
				} else if (green > 255) {
					green = 255;
				}
				return  "rgb(" + red + ", " + green + ", 0)";
			}
		});

		SYSTEM.init("{{namedurl "main-serv-info"}}");
	});
</script>

{{end}}
