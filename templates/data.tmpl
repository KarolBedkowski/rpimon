{{define "body"}}

{{if .Header1}}
<div class="container-fluid">
	<h1>{{.Header1}}</h1>
	{{if .Header2}}
	<h2>{{.Header1}}</h2>
	{{end}}
</div>
{{end}}

{{if .Data}}
<div class="container-fluid">
	<pre>{{.Data}}</pre>
</div>
{{end}}

{{if .TData}}
<div class="container-fluid">
	<table class="table-hover table-bordered table-condensed" id="table-services">
		<thead>
			<tr>
				{{range .THead}}<th>{{.}}</th>{{end}}
			</tr>
		</thead>
		<tbody>
		{{range .TData}}
			<tr>{{range .}}<td>{{.}}</td>{{end}}</tr>
		{{end}}
		</tbody>
	</table>
</div>
{{end}}
{{end}}


{{define "scripts"}}
{{if .TData}}
<script src="/static/lib/jquery/jquery.dataTables.js" type="text/javascript"></script>
<script src="/static/lib/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$('table').dataTable({
			"bAutoWidth": false,
			"bStateSave": true,
			"sPaginationType": "bootstrap",
			"iDisplayLength": 15,
			"aLengthMenu": [[15, 25, 50, 100, -1], [15, 25, 50, 100, "All"]],
		});
	});
</script>
{{end}}
{{end}}
