{{define "body"}}
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Worker</h1>
	</div>
</div>

<div class="row text-right">
	<div class="col-lg-12">
		<p>
			<a class="btn btn-default" href="{{ namedurl "worker-new-task" }}">New task</a>
		</p>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<table class="table table-hover table-bordered table-condensed" id="table-services">
			<thead>
				<tr>
					<th>Label</th>
					<th>Started / Finished</th>
					<th>Error</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
			{{ range $i, $t := .Tasks }}
				<tr>
					<td>{{ $t.Label }}</td>
					<td>{{ if $t.Started }}{{ formatDate $t.Started "" }}{{ end }} /
						{{ if $t.Finished }}{{ formatDate $t.Finished "" }}{{ end }}</td>
					<th>{{ $t.Error }}</th>
					<td>
						<a href="{{ namedurl "worker-task" "idx" $i }}">Show</a> |
						<a href="{{ namedurl "worker-task-log" "name" $t.LogFile }}" target="_blank">Log</a>
					</td>
				</tr>
			{{ end }}
			</tbody>
		</table>
	</div>
</div>

{{end}}


{{define "scripts"}}
<script src="/static/lib/jquery/jquery.dataTables.js" type="text/javascript"></script>
<script src="/static/lib/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$('table').dataTable({
			"bAutoWidth": false,
			"bStateSave": true,
//			"sPaginationType": "bootstrap",
			"iDisplayLength": 15,
			"aLengthMenu": [[15, 25, 50, 100, -1], [15, 25, 50, 100, "All"]],
		});
		$('#create-note-dlg form').submit(function(e) {
			$(this).attr("action", $(this).attr("action").replace("new", $("#note-name").val()));
		});
	});
</script>
{{end}}
