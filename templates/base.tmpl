{{define "base"}}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>{{.Title}} - {{.BasePageContext.Hostname}} - Monitor</title>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="/static/css/bootstrap.min.css">
		<!--<link rel="stylesheet" href="/static/css/bootstrap-theme.min.css">-->
		<link rel="stylesheet" href="/static/css/tablesorter.css">
		<link rel="stylesheet" href="/static/css/flick/jquery-ui-1.10.3.custom.css" >
		<link rel="stylesheet" href="/static/css/messi.min.css" type="text/css" />
		<link rel="stylesheet" href="/static/css/jquery.fs.naver.css" type="text/css"  />
		<link rel="stylesheet" href="/static/css/main.css" type="text/css"  />
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
		<script src="/static/lib/jquery/jquery-1.10.2.min.js" type="text/javascript" ></script>
		<!--<script src="/static/lib/jquery/jquery.fs.naver.min.js" type="text/javascript"></script>-->
		<script src="/static/lib/jquery/messi.min.js" type="text/javascript"></script>
		<script src="/static/lib/bootstrap.min.js" type="text/javascript"></script>
		<script src="/static/js/common.js" type="text/javascript"></script>
	</head>
	<body>
		<div class="navbar navbar-default navbar-static-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">Monitor <strong>{{.BasePageContext.Hostname}}</strong></a>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						{{$current := .BasePageContext.CurrentMainMenuPos}}
						{{range .BasePageContext.MainMenu}}
						{{if .Submenu}}
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{.Title}} <b class="caret"></b></a>
							<ul class="dropdown-menu">
							{{range .Submenu}}
								<li {{if eq .ID $current}}class="active"{{end}}>
									<a class="" href="{{.Href}}">{{.Title}}</a>
								</li>
							{{end}}
							</ul>
						</li>
						{{else}}
						<li class="{{if eq .ID $current}}active{{end}}">
							<a class="" href="{{.Href}}">{{.Title}}</a>
						</li>
						{{end}}
						{{end}}
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li>
							{{if .CurrentUser}}
							<a class="" href="{{namedurl "auth-logoff"}}">Logoff</a>
							{{else}}
							<a class="" href="{{namedurl "auth-login"}}">Login</a>
							{{end}}
						</li>
					</ul>
				</div>
			</div>
		</div>
		{{if .BasePageContext.LocalMenu}}
		<div class="container" id="local-menu">
			<ul class="nav nav-tabs">
				{{$currentl := .BasePageContext.CurrentLocalMenuPos}}
				{{range .BasePageContext.LocalMenu}}
				<li{{if eq .ID $currentl}} class="active"{{end}}>
					<a href="{{.Href}}" >{{.Title}}</a>
				</li>
				{{end}}
			</ul>
		</div>
		{{end}}
		{{template "flash" .}}
		{{template "body" .}}

		<footer class="bs-footer footer" role="contentinfo">
			<div class="container">
				<p><small>{{.Now}} | {{.CurrentUser}} | RPIMON v0.3</small></p>
			</div>
		</footer>
	</body>
	<script type="text/javascript" charset="utf-8">
		$(function() {
			//$("#local-menu").naver();
			$(window).on("resize", function(e) {
			    $(".naver").trigger("close.naver");
			});
		});
	</script>
</html>
{{end}}
