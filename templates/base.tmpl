{{define "base"}}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>{{.Title}} - {{.BasePageContext.Hostname}} - Monitor</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/static/css/redmond/jquery-ui-1.10.3.custom.css" rel="stylesheet">
		<link href="/static/css/tablesorter.css" rel="stylesheet">
		<link rel="stylesheet" href="/static/css/pure-min.css" type="text/css" media="all" />
		<link rel="stylesheet" href="/static/css/main.css" type="text/css" media="all" />
		<script src="/static/lib/jquery/jquery-1.10.2.min.js"></script>
		<script src="/static/lib/jquery/jquery-ui-1.10.3.custom.min.js"></script>
	</head>
	<body>
		<div class="pure-g-r" id="layout">
			<div class="sidebar pure-u">
				<header class="header">
					<hgroup class="hgroup">
						<h1><a class="pure-menu-heading" href="/">Monitor</a></h1>
						<h2>{{.BasePageContext.Hostname}}</h2>
					</hgroup>
					<nav class="nav">
					<ul  class="nav-list">
						{{$current := .BasePageContext.CurrentMainMenuPos}}
						{{range .BasePageContext.MainMenu}}
						<li class="nav-item{{if eq .Href $current}} nav-item-selected{{end}}">
							<a class="" href="{{.Href}}">{{.Title}}</a>
						</li>
						{{end}}
					</ul>
					</nav>
				</header>
			</div><!-- end sidebar -->
			<div class="pure-u-1">
				<div class="content">
					{{if .BasePageContext.LocalMenu}}
					<div class="pure-u-1">
						<div class="pure-menu pure-menu-open pure-menu-horizontal">
							<ul>
								{{$currentl := .BasePageContext.CurrentLocalMenuPos}}
								{{range .BasePageContext.LocalMenu}}
									<li class="{{if eq .Href $currentl}}pure-menu-selected {{end}}">
										<a href="{{.Href}}" >{{.Title}}</a>
									</li>
								{{end}}
							</ul>
						</div>
					</div>
					{{end}}
					{{template "flash" .}}
					<div class="pure-g-r content-ribbon">
					{{template "body" .}}
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
{{end}}
