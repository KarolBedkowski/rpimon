{{define "body"}}

<div class="pure-u-1">
	<section>
		<h1>Mount</h1>
		<pre>{{.Data}}</pre>
	</section>
</div>

<div class="pure-u-1">
	<section>
		<h1>Umount</h1>
		<form action="{{namedurl "storage-umount"}}" method="POST" class="pure-form">
			<fieldset>
				<label for="fs">File system</label>
				<select name="fs" id="fs">
				{{range .Mounted}}
					<option value="{{.Mpoint}}">{{.Mpoint}} ({{.Device}}, {{.Type}})</option>
				{{end}}
				</select>
				<button type="submit" class="pure-button pure-button-primary">Umount</button>
				<input type="hidden" name="BasePageContext.CsrfToken" id="" value="{{.CsrfToken}}" />
			</fieldset>
		</form>
	</section>
</div>

{{end}}
