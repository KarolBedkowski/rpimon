{{define "body"}}
<div class="container">
	<table class="table table-hover table-condensed table-bordered">
		<thead>
			<tr>
				<th>Mount point</th>
				<th>Device</th>
				<th>Type</th>
				<th>Options</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
		{{range .Mounted}}
			<tr>
				<td>{{.Mpoint}}</td><td>{{.Device}}</td><td>{{.Type}}</td><td>{{.Options}}</td>
				<td><a href="{{namedurl "storage-umount" }}?fs={{.Mpoint}}" onclick="return RPI.confirm()" title="Umount"><span class="glyphicon glyphicon-eject"></span></a></td>
			</tr>
		{{end}}
		</tbody>
	</table>
</div>
{{end}}


{{define "scripts"}}
<script src="/static/lib/jquery/jquery.dataTables.js" type="text/javascript"></script>
<script src="/static/lib/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$('table').dataTable({
			"bAutoWidth": false,
			"bStateSave": true,
			"bFilter": false,
			"sPaginationType": "bootstrap",
			"iDisplayLength": 15,
			"bLengthChange": false,
			"aoColumnDefs": [{
				"aTargets": [4],
				"bSortable": false,
			}],
		});
	});
</script>
{{end}}
