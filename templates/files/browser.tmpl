{{define "body"}}
<div class="container">
	<p class="breadcrumb">{{.Path}}</p>
	<div class="table-responsive">
		<table class="table-hover table-bordered table-condensed">
			<thead>
				<tr>
					<th>Filename</th>
					<th>Size</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
			{{$ctx := . }}
			{{if ne .Path "."}}
				<tr>
					<td><a href="?p={{$ctx.GetFullPath ".." | urlquery}}">[ .. ]</a></td>
					<td>&nbsp;</td>
					<td>&nbsp;</td>
				</tr>
			{{end}}
			{{range .Files}}
				<tr>
					<td><span class="glyphicon {{if .IsDir}}glyphicon-folder-close{{else}}glyphicon-file{{end}}"></span>
					&nbsp;
					<a href="?p={{$ctx.GetFullPath .Name | urlquery}}">{{.Name}}</a></td>
					<td>{{if .IsDir}}[dir]{{else}}{{.Size}}{{end}}</td>
					<td>{{.ModTime}}</td>
				</tr>
			{{end}}
			</tbody>
		</table>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2>Upload</h2>
			<form action="{{namedurl "files-upload"}}" method="post" enctype="multipart/form-data" class="form-inline">
				<input type="file" name="upload" />
				<input type="submit" value="Start upload" class="btn btn-primary btn-sm"/>
				<input type="hidden" name="BasePageContext.CsrfToken" id="" value="{{.CsrfToken}}" />
				<input type="hidden" name="p" id="" value="{{.Path}}" />
			</form>
		</div>
		<div class="col-md-6">
			<h2>Create directory</h2>
			<form action="{{namedurl "files-mkdir"}}" method="post" class="form-inline">
				<input type="text" name="name" placeholder="Directory name" required />
				<input type="submit" value="Mkdir"  class="btn btn-primary btn-sm"/>
				<input type="hidden" name="BasePageContext.CsrfToken" id="" value="{{.CsrfToken}}" />
				<input type="hidden" name="p" id="" value="{{.Path}}" />
			</form>
		</div>
	</div>
</div>

<script src="/static/lib/jquery/jquery.dataTables.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$('table').dataTable({
			"bAutoWidth": false,
			"bStateSave": true,
			"iDisplayLength": 15,
			"aLengthMenu": [[15, 25, 50, 100, -1], [15, 25, 50, 100, "All"]],
		});
	});
</script>
{{end}}

