{{define "body"}}

<div class="container">
	<h1>MPD Current Playlists</h1>
{{if .Error}}
	<div class="alert alert-warning">
		<p>Connection error:<br/>{{.Error}}</p>
	</div>
{{end}}
</div>

{{if not .Error}}
<div class="container">
	<table class="table table-hover table-condensed table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		{{range .Playlists}}
			<tr>
				<td>{{.playlist}}</td>
				<td><a href="{{namedurl "mpd-pls-action" "plist" .playlist "action" "play"}}">Play</a> 
				</td>
			</tr>
		{{end}}
		</tbody>
	</table>
	{{template "pager" }}
</div>

<script src="/static/lib/jquery/jquery.tablesorter.min.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$('table').tablesorter({
			ignoreCase: true,
		});
		addPager($('table'));
	});
</script>
{{end}}

{{end}}
