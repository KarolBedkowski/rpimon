{{define "body"}}
<div class="pure-u-1">
		<h1>MPD</h1>
</div>

{{if .Status.Error}}
<div class="pure-u-1">
	<div class="warnings">
		<p>Connection error:<br/>{{.Status.Error}}</p>
	</div>
</div>

{{else}}
<div class="pure-u-1">
	<section>
		<a class="pure-button" href="/mpd/action/play">Play</a>
		<a class="pure-button" href="/mpd/action/next">Next</a>
		<a class="pure-button" href="/mpd/action/prev">Previous</a>
		<a class="pure-button" href="/mpd/action/pause">Pause</a>
		<a class="pure-button" href="/mpd/action/stop">Stop</a>
	</section>
</div>

<div class="pure-u-2-3">
	<section>
		<h2>Current song</h2>
		<table class="pure-table table-left-align">
			<tr>
				<th>Name</th>
				<td >{{.Status.Current.Name}}</td>
			</tr>
			<tr>
				<th>Artist</th>
				<td >{{.Status.Current.Artist}}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td >{{.Status.Current.Title}}</td>
			</tr>
			<tr>
				<th>Album</th>
				<td>{{.Status.Current.Album}}</td>
			</tr>
			<tr>
				<th>Track</th>
				<td>{{.Status.Current.Track}}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{.Status.Current.Date}}</td>
			</tr>
			<tr>
				<th>Genre</th>
				<td>{{.Status.Current.Genre}}</td>
			</tr>
			<tr>
				<th>File</th>
				<td >{{.Status.Current.file}}</td>
			</tr>
		</table>
	</section>
</div>

<div class="pure-u-1-3">
	<section>
		<h2>Status</h2>
		<table class="pure-table table-left-align">
			<tr>
				<th>State</th>
				<td>{{.Status.Status.state}}</td>
			</tr>
			<tr>
				<th>Audio</th>
				<td>{{.Status.Status.audio}}</td>
			</tr>
			<tr>
				<th>Bitrate</th>
				<td>{{.Status.Status.bitrate}}</td>
			</tr>
			<tr>
				<th>Random</th>
				<td>{{.Status.Status.random}}</td>
			</tr>
			<tr>
				<th>Repeat</th>
				<td>{{.Status.Status.repeat}}</td>
			</tr>
			<tr>
				<th>Volume</th>
				<td>{{.Status.Status.volume}}</td>
			</tr>
		</table>
	</section>
</div>

<div class="pure-u-1">
	<section>
		<h2>Actions</h2>
		<div class="pure-menu pure-menu-open">
		<ul>
			<li class="pure-menu-heading"><strong>Play</strong></li>
			<li><a href="/mpd/action/toggle_random">Toggle Random</a></li>
			<li><a href="/mpd/action/toggle_repeat">Toggle Repeat</a></li>
			<li class="pure-menu-heading"><strong>Tools</strong></li>
			<li><a href="/mpd/action/update" onclick="return lconfirm()">Update</a></li>
		</ul>
		</div>
	</section>
</div>

{{end}}

<script type="text/javascript">
	function lconfirm() {
		return confirm('Are you sure?');
	}
	function refresh() {
		window.location.reload(true);
	 }

	$(function() {
		setTimeout(refresh, 60000);
	});
</script>

{{end}}
