{{define "body"}}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">MPD <small>History</small></h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="">
			<table class="table table-hover table-bordered table-condensed">
				<thead>
					<tr>
						<th>No</th>
						<th>Date</th>
						<th>Title</th>
						<th>Artist</th>
						<th>Track</th>
						<th>Album</th>
						<th>Name</th>
					</tr>
				</thead>
				<tbody>
				{{ range .History }}
					<tr>
						<td>{{ .ID }}</td>
						<td>{{ formatDate .Date "" }}</td>
						<td>{{ .Title }}</td>
						<td>{{ .Artist }}</td>
						<td>{{ .Track }}</td>
						<td>{{ .Album }}</td>
						<td>{{ .Name }}</td>
				{{ end }}
				</tbody>
			</table>
		</div>
	</div>
</div>

{{ if .History }}
<div class="row">
	<div class="col-lg-12">
		<a href="{{ namedurl "mpd-history-file" }}">Download file</a>
	</div>
</div>
{{ end }}

{{end}}

{{define "scripts"}}
<script src="/static/lib/jquery/jquery.dataTables.js" type="text/javascript"></script>
<script src="/static/lib/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$('table').dataTable({
			"bAutoWidth": false,
			"bStateSave": true,
			"iDisplayLength": 15,
			"aLengthMenu": [[15, 25, 50, 100, -1], [15, 25, 50, 100, "All"]],
			"order": [[ 0, 'dsc' ]],
		});
	});
</script>


{{end}}
