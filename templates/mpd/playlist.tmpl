{{define "body"}}
{{if .Error}}
<div class="container">
	<div class="alert alert-warning">
		<p>Connection error:<br/>{{.Error}}</p>
	</div>
</div>
{{else}}

<div class="container">
	<p>
		<a class="btn btn-default btn-sm" href="{{namedurl "mpd-pl-action" "action" "clear"}}" onclick="return RPI.confirm()">Clear</a>
	</p>
	<div class="table-responsive">
		<table class="table table-hover table-bordered table-condensed">
			<thead>
				<tr>
					<th>Pos</th>
					<th>Album</th>
					<th>Artist</th>
					<th>track</th>
					<th>Title</th>
					<th width="48px">Actions</th>
				</tr>
			</thead>
			<tbody>
			{{$currentSongId := .CurrentSongID}}
			{{range .Playlist}}
				{{if eq .Id $currentSongId}}
				<tr class="playlist-current-song active">
				{{else}}
				<tr>
				{{end}}
					<td>{{.Pos}}</td>
					<td>{{.Album}}</td>
					<td>{{.Artist}}</td>
					<td>{{.Track}}</td>
					<td>{{.Title}}</td>
					<td><a href="{{namedurl "mpd-song-action" "song-id" .Id "action" "play"}}"><span class="glyphicon glyphicon-play" title="Play"></span></a>
						&nbsp;
					<a href="{{namedurl "mpd-song-action" "song-id" .Id "action" "remove"}}"><span class="glyphicon glyphicon-remove" title="Remove"></span></a>
					</td>
				</tr>
			{{end}}
			</tbody>
		</table>
	</div>
	{{template "pager" }}
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2>Save Playlist</h2>
			<form action="{{namedurl "mpd-pl-save"}}" method="post" class="form-inline">
				<input type="text" name="Name" id="name" placeholder="Playlist name" required/>
				<input type="submit" value="Save" class="btn btn-primary btn-sm" />
				<input type="hidden" name="CsrfToken" id="" value="{{.CsrfToken}}" />
			</form>
		</div>
		<div class="col-md-6">
			<h2>Add custom</h2>
			<form action="{{namedurl "mpd-pl-add"}}" method="post" class="form-inline">
				<input type="text" name="Uri" id="uri" placeholder="URI" required/>
				<input type="submit" value="Add" class="btn btn-primary btn-sm"/>
				<input type="hidden" name="CsrfToken" id="" value="{{.CsrfToken}}" />
			</form>
		</div>
	</div>
</div>
{{end}}

<script src="/static/lib/jquery/jquery.tablesorter.min.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$('table').tablesorter({
			ignoreCase: true,
		});
		var page = 0;
		{{if .CurrentSongID}}
		page = Math.floor(parseInt({{.CurrentSongID}}) / 20);
		{{end}}
		addPager($('table'), page);
		$("form").validate();
	});
</script>


{{end}}
