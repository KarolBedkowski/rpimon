{{define "body"}}

<div class="container">
	<div class="table-responsive">
		<table class="table table-hover table-bordered table-condensed" id="table-playlist">
			<thead>
				<tr>
					<th>Album</th>
					<th>Artist</th>
					<th>track</th>
					<th>Title</th>
					<th width="48px">Actions</th>
				</tr>
			</thead>
			<tbody id="playlist-tbody">
			</tbody>
		</table>
	</div>
	<p>
		<a class="btn btn-default btn-sm" href="{{namedurl "mpd-pl-action" "action" "clear"}}" onclick="return RPI.confirm()">Clear</a>
	</p>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2>Save Playlist</h2>
			<form action="{{namedurl "mpd-pl-save"}}" method="post" class="form-inline">
				<input type="text" name="Name" id="name" placeholder="Playlist name" required/>
				<input type="submit" value="Save" class="btn btn-primary btn-sm" />
				<input type="hidden" name="CsrfToken" id="" value="{{.CsrfToken}}" />
			</form>
		</div>
		<div class="col-md-6">
			<h2>Add custom</h2>
			<form action="{{namedurl "mpd-pl-add"}}" method="post" class="form-inline">
				<input type="text" name="Uri" id="uri" placeholder="URI" required/>
				<input type="submit" value="Add" class="btn btn-primary btn-sm"/>
				<input type="hidden" name="CsrfToken" id="" value="{{.CsrfToken}}" />
			</form>
		</div>
	</div>
</div>

<script src="/static/js/mpd_playlist.js" type="text/javascript" ></script>
<script src="/static/lib/jquery/jquery.dataTables.js" type="text/javascript"></script>
<script src="/static/lib/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$("form").validate();
		MPD.plist.init();
	});
</script>


{{end}}
