{{define "body"}}

<div class="container">
	<table class="table table-hover table-bordered table-condensed" id="table-mpd-playlist">
		<thead>
			<tr>
				<th>
					<div class="row">
						<span class="col-title col-sm-6 col-xs-12 col-md-5">Title</span>
						<span class="col-artist col-sm-6 col-xs-12 col-md-4">Artist</span>
						<span class="col-track col-sm-2 col-xs-3 col-md-1">Track</span>
						<span class="col-album col-sm-10 col-xs-9 col-md-2">Album</span>
					</div>
				</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody id="playlist-tbody">
		</tbody>
	</table>
	<p>
		<a class="btn btn-danger btn-sm" href="{{namedurl "mpd-pl-action" "action" "clear"}}" onclick="return RPI.confirm()">
			<span class="glyphicon glyphicon-remove"></span>
			Clear playlst
		</a>
	</p>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-6">
			<h2>Save Playlist</h2>
			<form action="{{namedurl "mpd-pl-save"}}" method="post" class="form-inline">
				<input type="text" name="Name" id="name" placeholder="Playlist name" required/>
				<input type="submit" value="Save" class="btn btn-primary btn-sm" />
				<input type="hidden" name="CsrfToken" id="" value="{{.CsrfToken}}" />
			</form>
		</div>
		<div class="col-xs-12 col-sm-6">
			<h2>Add custom</h2>
			<form action="{{namedurl "mpd-pl-add"}}" method="post" class="form-inline">
				<input type="text" name="Uri" id="uri" placeholder="URI" required/>
				<input type="submit" value="Add" class="btn btn-primary btn-sm"/>
				<input type="hidden" name="CsrfToken" id="" value="{{.CsrfToken}}" />
			</form>
		</div>
	</div>
</div>

<script src="/static/js/mpd_playlist.js" type="text/javascript" ></script>
<script src="/static/lib/jquery/jquery.dataTables.js" type="text/javascript"></script>
<script src="/static/lib/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$("form").validate();
		MPD.plist.init();
	});
</script>


{{end}}
